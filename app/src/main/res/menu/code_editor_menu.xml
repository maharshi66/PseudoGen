<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CodeEditorTabbedActivity">
    <item android:id="@+id/action_clearText"
        android:title="Clear text"
        android:icon="@drawable/clear_text_icon"
        app:showAsAction="ifRoom">
    </item>
    <item android:id="@+id/checkAndSave"
        android:title="Save"
        android:icon="@drawable/save_icon"
        app:showAsAction="ifRoom">
    </item>
    <item android:id="@+id/settings_icon"
        android:title="Editor settings"
        android:icon="@drawable/settings_icon"
        app:showAsAction="ifRoom">
        <menu>
            <item
                android:id="@+id/action_editDetails"
                android:title="Edit details" />
            <item android:id="@+id/action_theme"
                android:title="Theme"
                app:showAsAction="always">
                <menu>
                    <item android:id="@+id/theme_blackboard" android:title="Blackboard">
                    </item>
                    <item android:id="@+id/theme_whiteboard" android:title="Whiteboard">
                    </item>
                </menu>
            </item>
            <item android:id="@+id/action_fontChange"
                android:title="Font type"
                app:showAsAction="always">
                <menu>
                    <item android:id="@+id/fontType_fira" android:title="Fira">
                    </item>
                    <item android:id="@+id/fontType_kalam" android:title="Kalam">
                    </item>
                    <item android:id="@+id/fontType_ubuntu"
                        android:title="Ubuntu"></item>
                    <item android:id="@+id/fontType_sourceCodePro"
                        android:title="Source Code"></item>
                </menu>
            </item>
            <item android:id="@+id/action_fontSizeChange"
                android:title="Font size"
                app:showAsAction="always">
                <menu>
                    <item android:id="@+id/fontSize_small" android:title="Small">
                    </item>
                    <item android:id="@+id/fontSize_big" android:title="Big">
                    </item>
                </menu>
            </item>
            <item
                android:id="@+id/action_shortcuts"
                android:title="Shortcuts"
                android:checkable="true"
                android:actionLayout="@layout/toggle_switch_shortcuts"/>
            <item
                android:id="@+id/action_backHome"
                android:title="Exit" />
        </menu>
    </item>
</menu>