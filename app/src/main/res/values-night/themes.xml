<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PseudoGen" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_blue </item>
        <item name="colorPrimaryVariant">@color/indigo</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_blue</item>
        <item name="colorSecondaryVariant">@color/indigo</item>
        <item name="colorOnSecondary">@color/bright_orange</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="fontFamily">@font/audiowide</item>
    </style>
    <!-- Action Bar Style -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Bottom Navigation Style -->

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/audiowide</item>
    </style>

    <!-- List View Style -->
    <style name="Widget.AppCompat.NewListView" parent="Widget.AppCompat.ListView">
        <item name="android:fontFamily">@font/fira_mono_medium</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <!-- Edit Text Style -->
    <style name="Widget.AppCompat.NewEditText" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/fira_mono</item>
    </style>



</resources>