<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/codeListFragment"
    tools:context=".CodeListFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:orientation="horizontal">
        <SearchView
            android:id="@+id/codeListSearchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:theme="@style/MySearchViewStyle"
            app:layout_constraintBottom_toTopOf="@+id/codeListExpandableListView">
        </SearchView>
        <ImageView
            android:id="@+id/filterImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_weight="4"
            app:srcCompat="@drawable/filter_icon">
        </ImageView>
        <ImageView
            android:id="@+id/deleteAllImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_weight="4"
            app:srcCompat="@drawable/delete_icon">
        </ImageView>
    </LinearLayout>
    <ExpandableListView
        android:id="@+id/codeListExpandableListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/codeListSearchView"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:theme="@style/Widget.AppCompat.NewListView">
    </ExpandableListView>
</LinearLayout>