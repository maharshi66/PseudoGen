<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/code_editor_dark"
    android:layout_height="match_parent"
    tools:context=".ChallengesActivity">
    <com.google.android.gms.ads.AdView
        android:id="@+id/examplesAdView"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>
    <TextView
        android:id="@+id/examplesHeaderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solve these common problems to get better at writing pseudocode"
        android:textColor="@color/bright_orange"
        android:textSize="16dp"
        android:padding="10dp"
        android:drawableLeft="@drawable/info_icon"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/examplesAdView">
    </TextView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/examplesHeaderTextView">
        <ExpandableListView
            android:id="@+id/examplesExpandableListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:padding="20dp"
            android:divider="@color/code_editor_dark"
            android:dividerHeight="10.0sp">
        </ExpandableListView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>