<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodeEditorFragment">

    <com.maharshiappdev.pseudogen.LineNumberedEditText
        android:id="@+id/inputCodeEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:lines="25"
        android:scrollbars="vertical|horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:hint="Add pseudocode here"
        android:background="@color/code_editor_dark"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/Widget.AppCompat.NewEditText">
    </com.maharshiappdev.pseudogen.LineNumberedEditText>

</FrameLayout>