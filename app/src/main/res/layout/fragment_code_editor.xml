<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodeEditorFragment"
    android:forceDarkAllowed="false"
    android:id="@+id/fragment_code_editor">

    <com.maharshiappdev.pseudogen.LineNumberedEditText
        android:id="@+id/inputCodeEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:forceDarkAllowed="false"
        android:gravity="top|start"
        android:hint="Add pseudocode here..."
        android:inputType="textMultiLine|textNoSuggestions"
        android:lines="50"
        android:scrollbars="vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/blackboard_dark"
        android:textColor="@color/chalk_white"
        android:fontFamily="@font/fira_mono">
    </com.maharshiappdev.pseudogen.LineNumberedEditText>
</FrameLayout>