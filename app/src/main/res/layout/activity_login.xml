<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
  <ImageView
      android:id="@+id/logoImageView"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:layout_marginTop="100dp"
      android:layout_marginBottom="500dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/pigeonlogo" />
  <Button
      android:id="@+id/emailButton"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_marginBottom="150dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:adjustViewBounds="true"
      android:drawableLeft="@drawable/emailsignin_icon"
      android:onClick="signInWithEmailClicked"
      android:scaleType="centerInside"
      android:text="Continue with email"
      android:background="@drawable/googlesignin_button_shape"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent" />
  <Button
      android:id="@+id/googleButton"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_marginBottom="80dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:text="Continue with Google"
      android:background="@drawable/googlesignin_button_shape"
      android:backgroundTint="@color/code_editor_white"
      android:drawableLeft="@drawable/googlesignin_image"
      android:onClick="signInWithGoogleClicked"
      android:scaleType="fitXY"
      android:adjustViewBounds="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/emailButton" />
</androidx.constraintlayout.widget.ConstraintLayout>